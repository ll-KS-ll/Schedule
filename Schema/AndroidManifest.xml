<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.schema.bro"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.schema.bro.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.schema.bro.ThemeActivity"
            android:label="@string/title_theme_activity"
            android:parentActivityName="com.schema.bro.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.schema.bro.MainActivity" />
        </activity>
        <activity
            android:name="com.schema.bro.AboutActivity"
            android:label="@string/title_about_activity"
            android:parentActivityName="com.schema.bro.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.schema.bro.MainActivity" />
        </activity>
        <activity
            android:name="com.schema.bro.LessonActivity"
            android:label="@string/title_add_activity"
            android:parentActivityName="com.schema.bro.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.schema.bro.MainActivity" />
        </activity>
        <activity
            android:name="com.schema.bro.SchoolMealActivity"
            android:label="@string/title_schoolmeal_activity"
            android:parentActivityName="com.schema.bro.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.schema.bro.MainActivity" />
        </activity>
    </application>

</manifest>